<section id="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br>{{publicationData.title}}</h2>
            <h3>Author: {{publicationData.author.username}}</h3>
            <h3>Painting technique: {{publicationData.paintTechnique}}</h3>
            <h3>Certificate of authenticity: {{publicationData.certificate}}</h3>

            <!-- If there is no registered user, do not display buttons-->
            <div class="buttons">
                {{#if user}}
                {{#if isAuthor}}
                    <!-- Only for registered user and author of the publication -->
                    <a href="/publication/edit/{{publicationData._id}}" class="btn-edit">Edit</a>
                    <a href="/publication/delete/{{publicationData._id}}" class="btn-delete">Delete</a>
                {{else}}
                    {{#if isShered}}
                    <!-- logged in user who has already shared the publication-->
                    <p class="shared-pub">You already shared this publication</p>
                    {{else}}
                    <!-- logged in user who has not yet shared the publication-->
                    <a href="/publication/shere/{{publicationData._id}}" class="btn-share">Share publication</a>
                    {{/if}}
                {{/if}}
                {{/if}}
            </div>

        </article>

        <article class="details-card-image">
            <img src="{{publicationData.artPicture}}" alt="art-image2">
        </article>

    </article>
</section>