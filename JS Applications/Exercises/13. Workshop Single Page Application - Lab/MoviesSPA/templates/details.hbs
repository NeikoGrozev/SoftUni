{{> header}}
<div class="container">
    <div class="row bg-light text-dark">
        <h1>{{movie.title}}</h1>

        <div class="col-md-8">
            <img class="img-thumbnail" src="{{movie.imageUrl}}" alt="{{movie.title}}">
        </div>
        <div class="col-md-4 text-center">
            <h3 class="my-3 ">Movie Description</h3>
            <p>{{movie.description}}</p>
            {{#if isTheCreator}}
            <a class="btn btn-danger" href="/delete/{{params.id}}">Delete</a>
            <a class="btn btn-warning" href="/edit/{{params.id}}">Edit</a>
            {{else}}
                {{#if isLike}}
                <a class="btn btn-primary" href="/like/{{params.id}}">Like</a>
                {{else}}
                <span class="enrolled-span">Liked {{counter}}</span>
                {{/if}}
            {{/if}}
        </div>
    </div>
</div>
{{> footer}}