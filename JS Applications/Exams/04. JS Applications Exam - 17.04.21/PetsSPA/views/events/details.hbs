{{>header}}
<!-- Details Page ( for Guests and Users ) -->
<section id="details-page" class="details">
    <div class="pet-information">
        <h3>Name: {{pet.name}}</h3>
        <p class="type">Type: {{pet.type}}</p>
        <p class="img"><img src="{{pet.imageUrl}}"></p>
        <div class="actions">
            {{#if isCreator}}
            <!-- Edit/Delete buttons ( Only for creator of this pet )  -->
            <a class="button" href="/edit/{{params.id}}">Edit</a>
            <a class="button" href="/delete/{{params.id}}">Delete</a>
            {{else}}
            <!-- Bonus -->
            <!-- Like button ( Only for logged-in users, which is not creators of the current pet ) -->
                {{#if guest}}
                    {{#if isLike}}
                    <a class="button" href="/like/{{params.id}}">Like</a>
                    {{/if}}
                {{/if}}
            {{/if}}
            <!-- ( for Guests and Users )  -->
            <div class="likes">
                <img class="hearts" src="/images/heart.png">
                <span id="total-likes">Likes: {{likeCounter}}</span>
            </div>
            <!-- Bonus -->
        </div>
    </div>
    <div class="pet-description">
        <h3>Description:</h3>
        <p>{{pet.description}}</p>
    </div>
</section>
{{>footer}}